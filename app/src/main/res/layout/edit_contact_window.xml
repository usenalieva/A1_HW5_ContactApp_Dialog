<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/dialog_background"
    android:background="@drawable/background_edit_dialog"
    android:layout_gravity="center"
   android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="30dp"
        android:gravity="center">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_close"
            android:text="@string/x"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="center"
            android:background="@drawable/style_btn_stroke_blue_press_white90"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/ic_profilePic"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_weight="50"
            android:src="@drawable/ic_portrait_150dp"/>

        <EditText
            android:id="@+id/et_nameEdited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/et_phoneEdited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:inputType="phone"/>

        <Button
            android:id="@+id/btn_saveEdited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="@string/save"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:background="@drawable/style_btn_stroke_black95_press_blue"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>